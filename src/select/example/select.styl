.selected-container .select-option,
.select-container .select-option {
  border-radius: 3px;
  padding: 5px;
  margin: 3px;
  cursor: pointer;
}

.select-container .select-option.selected {
  background: #18c9ba;
  color: #fff;
}

.select-container .select-option.active {
  background: #767676;
  color: #fff;
}

.select-container{
  border: 1px solid #eee;
  border-radius: 5px;
}

.select-container{
  max-height: 300px;
}

.select-container{
  overflow: auto;
  border: 1px solid #eee;
  border-radius: 5px;
  max-height: 300px;
}

.shift-selector{
  position: absolute;
  min-width: 500px;
  background-color: white;
  z-index: 1;
}

.shift-selector .select-container {
  box-shadow: 3px 3px 3px rgba(0,0,0,.3);
  border-radius: 0 0 5px 5px;
}
