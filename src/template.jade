    // copy-pasta of fmm link for the proxima-nova font
    link(rel="stylesheet" href="http://use.typekit.net/c/af2d3e/1w;proxima-nova,2,cdb:T:n1,cdj:T:n3,cdg:T:n4,cdd:T:n6,cdW:T:n7,cdY:T:n8,cdT:T:n9/d?" media="all")

    // font-awesome
    link(
      rel = "stylesheet"
      href = "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
    )

    style.
      .page {
        width: 80%;
        margin: 20px auto;
        font-family: Impact, Charcoal, sans-serif;
      }

      h1, h2, h3 {
        border-bottom: 1px solid #ddd;
        padding: 10px;
      }

      code.code {
        background: #f5f2f0;
        padding: 10px;
        line-height: 1.2em;
        font-family: "Lucida Console", Monaco, monospace, mono;
        color: #666;
        margin: 10px;
        display: block;
      }

      .panel {
        border-radius: 10px;
        padding: 10px;
        background: #eee;
        margin: 20px 10px;
      }

      .code-name {
        font-size: 1.3em;
        color: #999;
        text-align: right;
      }

      code{
        font-weight: normal;
      }

      .token{
        display: inline-block;
        -webkit-box-orient: inherit;
        -moz-box-orient: inherit;
        -o-box-orient: inherit;
        -webkit-box-lines: inherit;
        -moz-box-lines: inherit;
        -o-box-lines: inherit;
        -webkit-flex-flow: inherit;
        -ms-flex-flow: inherit;
        flex-flow: inherit;
        background: inherit;
        border: none;
        height: auto;
        line-height: normal;
        -webkit-box-sizing: inherit;
        -moz-box-sizing: inherit;
        box-sizing: inherit;
        -webkit-border-radius: 0;
        border-radius: 0;
        color: inherit;
        margin-bottom: 0;
        -webkit-box-shadow: none;
        box-shadow: none;
      }

