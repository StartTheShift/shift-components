.select-container .select-option {
  border-radius: 3px;
  padding: 5px;
  margin: 3px;
}

.select-container .select-option.selected {
  background: #18c9ba;
  color: #fff;
}

.select-option .checkbox {
  display: none;
}
.select-option.selected .checkbox {
  display: inline;
  padding-right: 5px;
}

.select-container{
  max-width: 400px;
  max-height: 200px;
  overflow-y: auto;
  border: 1px solid #eee;
  border-radius: 5px;
}
