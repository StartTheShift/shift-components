.select-container .select-option {
  border-radius: 3px;
  padding: 5px;
  margin: 3px;
}

.select-container .select-option.selected {
  background: #18c9ba;
  color: #fff;
}

.select-container .select-option.active {
  background: #767676;
  color: #fff;
}

.select-container{
  min-width: 400px;
  max-height: 200px;
  overflow-y: auto;
  border: 1px solid #eee;
  border-radius: 5px;
}

.shift-selector{
  position: absolute;
  background-color: white;
  z-index: 1;
}
